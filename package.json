{
  "name": "integration-bridge-boilerplate",
  "private": true,
  "description": "Boilerplate project to bootstrap integration Bridge",
  "main": "dist/index.js",
  "repository": "git@github.com:sipgate/integration-bridge-boilerplate.git",
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "husky install",
    "precommit": "lint-staged",
    "build": "tsc",
    "start": "ts-node-dev src/index.ts",
    "start:redis": "export REDIS_URL=http://localhost && ts-node-dev src/index.ts",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@sipgate/integration-bridge": "^0.13.28",
    "express": "^4.18.2",
    "husky": "^8.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,js,yml,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
