{
	"name": "integration-bridge-boilerplate",
	"private": true,
	"description": "Boilerplate project to bootstrap integration Bridge",
	"main": "dist/index.js",
	"repository": "git@github.com:sipgate/integration-bridge-boilerplate.git",
	"license": "Apache-2.0",
	"scripts": {
		"prepare": "husky install",
		"precommit": "lint-staged",
		"build": "tsc",
		"start": "NODE_ENV=development ts-node-dev --inspect -- src/index.ts",
		"start:redis": "export REDIS_URL=http://localhost && ts-node-dev src/index.ts",
		"lint": "eslint 'src/**/*.ts' --fix",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@sipgate/integration-bridge": "^0.19.0",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"husky": "^8.0.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^20.3.1",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"@typescript-eslint/parser": "^5.59.11",
		"eslint": "^8.42.0",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.1.3"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.{json,js,yml,md}": [
			"prettier --write",
			"git add"
		]
	}
}
